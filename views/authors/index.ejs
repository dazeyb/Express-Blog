<%- include("../partials/header.ejs"); %>
		<main>
			<h2>List of Authors</h2>

			<% if(!authors.length) { %>
			<p>There are no authors available yet.</p>
			<% } %>

			<ul>
				<% authors.forEach(author => { %>
				<li>
					<a href="/authors/<%= author._id %>"> <%= author.name %></a>
				</li>
				<% })%>
			</ul>
		</main>
	</body>
</html>
